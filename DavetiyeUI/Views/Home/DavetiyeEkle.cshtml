@model DavetiyeUI.Models.DavetiyeDto

@{
    ViewData["Title"] = "DavetiyeEkle";
}

<h1>DavetiyeEkle</h1>

<h4>DavetiyeDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DavetiyeEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="KatilimciAd" class="control-label"></label>
                <input asp-for="KatilimciAd" class="form-control" />
                <span asp-validation-for="KatilimciAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KatilimciSoyad" class="control-label"></label>
                <input asp-for="KatilimciSoyad" class="form-control" />
                <span asp-validation-for="KatilimciSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KatilimciTelefon" class="control-label"></label>
                <input asp-for="KatilimciTelefon" class="form-control" />
                <span asp-validation-for="KatilimciTelefon" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="katılım" /> @Html.DisplayNameFor(model => model.katılım)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
